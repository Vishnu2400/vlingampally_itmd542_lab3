extends layout

block content
  .edit-container
    h1 Edit Contact
    if msg
      p(class='redtext')= msg
    form(method='POST' action=`/contacts/${contact.id}/edit`)
      div
        label(for='firstName') First Name:
        input(type='text' name='firstName' id='firstName' value=contact.firstName required)
      div
        label(for='lastName') Last Name:
        input(type='text' name='lastName' id='lastName' value=contact.lastName required)
      div
        label(for='emailAddress') Email Address:
        input(type='email' name='emailAddress' id='emailAddress' value=contact.emailAddress)
      div
        label(for='notes') Notes:
        textarea(name='notes' id='notes' rows='4' cols='50')= contact.notes
      button(type='submit') Save Changes 
      | 
      a(href='/contacts') Cancel
